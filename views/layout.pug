doctype html
html
	head
		title #{title} - Tour the tour
		link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
		link(rel='stylesheet' href='/css/main.css')
	body
		nav.navbar.navbar-expand-md.navbar-dark.bg-dark
			a.navbar-brand(href='#') Tour
			button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
				span.navbar-toggler-icon
			#navbarsExampleDefault.collapse.navbar-collapse
				ul.navbar-nav.mr-auto
					li.nav-item.active
						a.nav-link(href='/')
							| Home 
							span.sr-only (current)
					if user
						li.nav-item
							a.nav-link(href='/packages/add') Add Package
					li.nav-item.dropdown
						a#dropdown01.nav-link.dropdown-toggle(href='http://example.com', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Dropdown
						.dropdown-menu(aria-labelledby='dropdown01')
							a.dropdown-item(href='/') Home
							a.dropdown-item(href='/package/add') Add package
							a.dropdown-item(href='#') Something else here
				
				ul.navbar-nav.navbar-right
					if user
						li.nav-item
							a.nav-link(href='/users/logout') Logout
					else
						li.nav-item
							a.nav-link(href='/users/login') Login
						li.nav-item
							a.nav-link(href='/users/register') Register

				form.form-inline.my-2.my-lg-0
					input.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
					button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search

		.container
			!= messages('message', locals)
			if errors
				each error, i in errors
					div(class="alert alert-danger") #{error.msg}
			block content
			br
			hr
			footer
				p Copyright &copy; 2020

		script(src='https://code.jquery.com/jquery-3.1.1.min.js')
		script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
		script(src='/js/main.js')